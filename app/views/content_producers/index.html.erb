<p id="notice"><%= notice %></p>

<h1>Listing Content Producers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_producers.each do |content_producer| %>
      <tr>
        <td><%= content_producer.name %></td>
        <td><%= link_to 'Show', content_producer %></td>
        <td><%= link_to 'Edit', edit_content_producer_path(content_producer) %></td>
        <td><%= link_to 'Destroy', content_producer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

